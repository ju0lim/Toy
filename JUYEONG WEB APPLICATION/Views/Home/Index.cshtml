@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.js"></script>
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.css">
</head>
<body>
    <div class="login-form">
        <h2>LOGIN</h2>
        <form id = "loginForm">
            <input type="email" placeholder="Email" name="email" required>
            <input type="password" placeholder="Password" name="password" required>
            <button type="button" id="loginBtn">LOGIN</button>
            <button id="signupBtn">SIGN UP</button>
        </form>
    </div>

    <div id="signupModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>SIGN UP</h2>
            <form id = "signupForm">
                <input type="email" placeholder="Email" name="email" required>
                <input type="password" placeholder="Password" name="password" required>
                <input type="password" placeholder="Password 확인" name="passwordConfirm" required>
                <button type="button" id="registerBtn">SIGN UP</button>
            </form>
        </div>
    </div>

    <script>
        $(document).ready(function() {

            var modal = $('#signupModal');
            var span = $('.close');
            
            $('#signupBtn').click(function () {
                modal.show();
            });

            span.click(function() {
                modal.hide();
            });

            $(window).click(function(e) {
                if ($(e.target).is(modal)) {
                    modal.hide();
                }
            });


            $('#loginBtn').click(function () {
                var formData = {
                    email: $('#loginForm input[name="email"]').val(),
                    password: $('#loginForm input[name="password"]').val()
                };

                $.ajax({
                    type: 'POST',
                    url: '/Home/Login',
                    data: formData,
                    dataType: 'json',
                    success: function (data) {
                        if (data.success) {
                            window.location.href = '/Dashboard';
                        } else {
                            $.toast({
                                heading: '오류',
                                text: 'Email과 Password를 확인해주세요.',
                                showHideTransition: 'slide',
                                icon: 'error',
                                loader: false,
                                position: 'top-right'
                            });
                        }
                    },
                    error: function (error) {
                        console.log('Error:', error);
                    }
                });
            });

            $('#registerBtn').click(function () {
                var formData = {
                    email: $('#signupForm input[name="email"]').val(),
                    password: $('#signupForm input[name="password"]').val(),
                    passwordConfirm: $('#signupForm input[name="passwordConfirm"]').val()
                };

                $.ajax({
                    type: 'POST',
                    url: '/Home/SignUp',
                    data: formData,
                    dataType: 'json',
                    success: function (data) {
                        if (data.success) {
                            modal.hide();
                            $.toast({
                                heading: '성공',
                                text: '회원가입이 완료되었습니다.',
                                showHideTransition: 'slide',
                                icon: 'success',
                                loader: false,
                                position: 'top-right'
                            });

                        } else {

                            let message = "";

                            if (data.message == "incorrect") {
                                message = "비밀번호가 일치하지 않습니다.";
                            }
                            else { 
                                message = "이미 존재하는 email입니다.";
                            }

                            $.toast({
                                heading: '오류',
                                text: message,
                                showHideTransition: 'slide',
                                icon: 'error',
                                loader: false,
                                position: 'top-right'
                            });
                        }
                    },
                    error: function (error) {
                        console.log('Error:', error);
                    }
                });
            });
        });
    </script>
</body>
</html>